<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_location_value"
        android:inputType="textCapWords"
        android:key="location"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_display_location" />

    <ListPreference
        android:entries="@array/unitNames"
        android:entryValues="@array/unitValues"
        android:key="units"
        android:defaultValue="@string/pref_default_unit_value"
        android:title="@string/pref_title_display_unit"/>
</PreferenceScreen>
